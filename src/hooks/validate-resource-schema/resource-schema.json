{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type":"object",

  "required": [
    "title",
    "description",
    "contentCategory",
    "mimeType",
    "licenses"
  ],
  "properties": {

    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "url": {
      "$ref": "#/definitions/URL"
    },
    "contentCategory": {
      "$ref": "#/definitions/ContentCategory"
    },
    "mimeType": {
      "type": "string"
    },

    "licenses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "thumbnailOptions": {
      "type": "object",
      "required": [
        "generate"
      ],
      "properties": {
        "generate": {
          "type": "boolean"
        },
        "options": {
          "type": "string"
        }
      }
    }


  },
  "definitions": {
    "URL": {
      "type": "string",
      "pattern": "^https?://.+$"
    },
    "ContentCategory": {
      "enum": ["atomic", "learning-object", "proven-learning-object", "tool"]
    }
  }
}
